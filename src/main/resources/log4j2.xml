<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- File for DEBUG logs -->
        <File name="FileDebug" fileName="logs/app-debug.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <!-- Application logs: DEBUG and up go to file and console -->
        <Logger name="com.openclassrooms.safetynet" level="debug" additivity="false">
            <AppenderRef ref="FileDebug"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger: INFO and up to console only -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>